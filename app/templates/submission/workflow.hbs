{{!-- Have navigation tabs here --}}
<h2>Workflow wrapper stub</h2>
<div class="row">
  {{!-- Separate navbar for easy workflow navigation --}}
  <nav class="my-4" role="navigation">
    <ul class="nav nav-pills nav-fill">
      <li class="nav-item">
        <LinkTo @route="submission.workflow.agreements" class="nav-link">Agreements</LinkTo>
      </li>
      <li class="nav-item">
        <LinkTo @route="submission.workflow.metadata" class="nav-link">Metadata</LinkTo>
      </li>
      <li class="nav-item">
        <LinkTo @route="submission.workflow.files" class="nav-link">Files</LinkTo>
      </li>
    </ul>
  </nav>
</div>

<div class="row">
  {{outlet}} {{!-- This outlet is where nested workflow steps will be rendered --}}
</div>
{{!-- Workflow footer - Next/Back buttons, etc --}}
<div class="row">
  <div class="ml-auto mt-4">
    <div class="btn-group mr-2" role="group" aria-label="Cancel workflow">
      <button type="button" class="btn btn-outline-danger" {{action "cancel"}}>Cancel</button>
    </div>
    <div class="btn-group" role="group" aria-label="Workflow navigation">
      <button type="button" class="btn btn-outline-primary" {{action "back"}}>Back</button>
      <button type="button" class="btn btn-primary" {{action "next"}}>Next</button>
    </div>
  </div>
</div>