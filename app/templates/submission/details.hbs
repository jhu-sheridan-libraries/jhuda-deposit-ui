<div class="row">
  <h2>Submission Details stub</h2>
</div>
<p class="row">
  This route is meant to display detailed information about a submission to the archive.
</p>
<hr>
<div class="row">
  {{#if metadata.title}}
    <h3 class="w-100">{{metadata.title}}</h3>
  {{/if}}
  <p class="w-100">
    <ul>
      <li><strong>Status:</strong> {{submission.status}}</li>
      <li><strong>Metadata status:</strong> {{submission.metadataStatus}}</li>
      <li><strong>Files status:</strong> {{submission.filesStatus}}</li>
      <li>
        <span><strong># of files:</strong> {{get submission "files.length"}}</span>
      </li>
    </ul>
  </p>
  <hr>
</div>
<div class="row">
  <span class="w-100 font-italic">Metadata should be displayed nicely below</span>
  <ul>
    {{#each mdDisplay as |datum|}}
      <li><strong>{{datum.label}}:</strong> {{datum.value}}</li>
    {{/each}}
  </ul>
</div>
<div class="row">
  <h3 class="w-100">Files</h3>
  {{#each (get submission "files") as |file|}}
    <div class="col-4">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title m-0 p-0">{{file.name}}</h5>
        </div>
        <div class="card-body">
          <p class="card-text">{{file.description}}</p>
          <p class="card-text">{{file.externalId}}</p>
          <hr>
          <p class="card-text"><strong>Status: </strong>{{file.status}}</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>
