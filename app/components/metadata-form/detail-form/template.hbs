<BsForm
  local-class="metadata-form"
  @model={{@metadataChangeset}}
  @onSubmit={{action this.noop}} as |form|>

  <div class="d-flex flex-row mt-1">
    <h5 class="mr-auto">Details</h5>
  </div>

  <form.element
    @controlType="text"
    @label="Collection Title"
    @model={{@metadataChangeset}}
    @placeholder="Collection Title"
    @showValidationOn={{array "focusout" "change" "input"}}
    @property="collectionTitle" />

  <form.element
    @controlType="textarea"
    @label="Description"
    @model={{@metadataChangeset}}
    @placeholder="Description"
    @property="description" />

  <form.element
    @controlType="text"
    @label="Keywords"
    @model={{@metadataChangeset}}
    @placeholder="Keywords"
    @property="keywords" />

  <form.element
    @controlType="textarea"
    @label="Data Use"
    @model={{@metadataChangeset}}
    @placeholder="Data Use"
    @property="dataUse" />

  <form.element
    @controlType="textarea"
    @label="Software Use"
    @model={{@metadataChangeset}}
    @placeholder="Software Use"
    @property="softwareUse" />
</BsForm>