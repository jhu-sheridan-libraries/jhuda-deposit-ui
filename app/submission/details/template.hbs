<div class="row">
  <div class="col">
    {{#if metadata.title}}
      <h2 class="w-100">{{metadata.title}}</h2>
    {{else}}
      <h2>Submission</h2>
    {{/if}}
  </div>
  <div>
    <SubmissionActionCell @record={{this.submission}} />
  </div>
</div>
<div class="row">
  <ul>
    <li><strong>Status:</strong> {{submission.status}}</li>
    <li><strong>Metadata status:</strong> {{submission.metadataStatus}}</li>
    <li><strong>Files status:</strong> {{submission.filesStatus}}</li>
    <li>
      <span><strong># of files:</strong> {{get submission "files.length"}}</span>
    </li>
  </ul>
</div>
<div class="row">
  <span class="w-100 font-italic">Metadata should be displayed nicely below</span>
  <ul>
    {{#each mdDisplay as |datum|}}
      <li><strong>{{datum.label}}:</strong> {{datum.value}}</li>
    {{/each}}
  </ul>
</div>
<div class="row">
  <h3 class="w-100">Files</h3>
  <FilesList @files={{get submission "files"}} @submissionActions={{get submission "requiredActions"}}/>
</div>
